<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="/assets/img/logo.png" type="image/x-icon">
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <title>LapakKita</title>
  </head>
  <body>

    <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-light" style="height: 90px;">
      <div class="container-fluid" style="justify-content: space-between;">
        <img src="/assets/img/logolapak.png" alt="" height="50px" style="margin-left: 50px;">
        <form class="d-flex" method="get">
          <input class="form-control me-2" type="search" placeholder="Cari di LapakKita" style="width: 700px;" name="search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
        <div style="display: flex; margin-right: 50px;">
          <li class="nav-item dropdown" style="display: flex; justify-content: center;">
            <img src="/assets/img/zee.jpeg" alt="" height="30px" style="border-radius: 100%; margin-right: 10px;">
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false" style="margin: auto; font-family: 'Montserrat';font-size: 16px; padding: 0px; color: black;">Azizi</a>
            <ul class="dropdown-menu" style="left: -90px; top: 35px;">
              <li><a class="dropdown-item" href="#">Action</a></li>
              <li><a class="dropdown-item" href="#">Another action</a></li>
              <li><a class="dropdown-item" href="#">Something else here</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/logout">Keluar</a></li>
            </ul>
          </li>
      </div>
      </div>
    </nav>
    
    <div class="container">
        <div class="row" style="justify-content: center;">
          <div class="col-9" style="display: flex; flex-flow: wrap; position: relative; margin-top: 100px;">
            <% result.forEach(el => { %>
                <div class="card" style="width: 220px; height: auto; margin-right: 20px; margin-top: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); border: 1px solid #ddd; cursor: pointer;" onclick="location.href='/detail/<%= el.id %>'">
                    <img src="<%= el.imageURL %>" style="height: 230px;" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title" style="font-weight:300; font-size: 16px; margin-bottom: 2px;"><%= el.name %></h5>
                      <p class="card-text" style="font-weight: 600; font-size: 18px; margin-bottom: 2px;"><%= currencyFormat(el.price) %></p>
                      <p style="background-color: #fdb5b5; width: fit-content; padding: 3px; border-radius: 5px; font-size: 11px; font-weight: 500; color: #d22c2c; margin-bottom: 2px;">cashback 20%</p>
                      <p style="font-size: 14px; color: #00000078;"><%= el.Store.address %></p>
                    </div>
                </div>
            <% }) %>
          </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  </body>
</html>